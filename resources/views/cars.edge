<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>AdonisJS - A fully featured web framework for Node.js</title>
  @entryPointStyles('app')
  @entryPointScripts('app')
</head>
<body>

  <main>
    <div>
      <h1 class="title">Welcome to Webserver A</h1>
      <p class="subtitle">
        Check for cars
      </p>


        

      
        @each(car in cars)
        <ul>
            <li> {{ car.plate }} 
             {{ car.brand }} 
             {{ car.model }} 
             {{ car.price }} 
             {{ car.ppd }} 
             {{ car.status }}
             <form method="GET" action="{{ route('cars.update', {id: car.plate}) }}/edit">
              <button style="display:inline; border: none; color:cornflowerblue;cursor:pointer;" type="submit">Rent</button>
            </form>
            </li>

        </ul>
        @end
      
    </div>
  </main>
</body>
</html>
